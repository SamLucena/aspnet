@using WellBooks.ViewModels
@model List<Item>

@{
    ViewData["Title"] = "Payment";
}

<div class="row">
    <div class="col-6">
        <h4 class="text-success">Itens do pedido</h4>
    </div>

    <div class="col-6 text-end">
        <p class="btn btn-sm btn-primary text-end">Total: R$ @ViewBag.total</p>
    </div>
</div>
<div class="row rounded p-2">
    <div class="col-sm-6 col-md-4 col-xl-3">
        @foreach(var product in ViewBag.products)
        {
            <div class="card mb-3 me-3 bg-dark rounded">
                <div class="d-flex flex-column p-3">
                    <h3 class="text-white fw-bold mb-3 card-title">@product.Name</h3>
                </div>
            </div>
        }
    </div>
    <div class="col-sm-6 col-md-4 col-xl-3">
        <ul class="mt-3 nav nav-pills mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-store" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Retirar na Loja</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link text-success" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-pix" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Pix</button>
          </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
          <div class="tab-pane fade show active" id="pills-store" role="tabpanel" aria-labelledby="pills-home-tab">
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3658.3304703688136!2d-46.73065228497905!3d-23.520613565973985!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94cef8c1d371ec31%3A0x671c9325c275132e!2sETEC%20Professor%20Basilides%20de%20Godoy.!5e0!3m2!1spt-BR!2sbr!4v1655822524558!5m2!1spt-BR!2sbr" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
              <p>Retirar seu pedido em até 2 dias úteis</p>
               <form asp-action="ConfirmOrder">
                  <button type="submit" class="btn btn-outline-success">Finalizar compra</button>
              </form>
          </div>
          <div class="tab-pane fade" id="pills-pix" role="tabpanel" aria-labelledby="pills-profile-tab">
              
              <div style="width: 480px">
                  <img src="https://github.com/SamLucena/assets/blob/main/res/img/tcc/pix.jpeg?raw=true" alt="Pix" width="200"/>
              </div>
              <div class="mt-3 mb-3">
                    <span class="btn btn-outline-primary">Chave pix: +5511988216418</span>
                    <div>Obs: enviar comprovante no e-mail <a href="mailto:seventwaresystem@gmail.com">seventwaresystem@gmail.com</a></div>
              </div>
              <form asp-action="ConfirmOrder">
                  <button type="submit" class="btn btn-outline-success">Finalizar compra</button>
              </form>
          </div>
        </div>
    </div>
</div>