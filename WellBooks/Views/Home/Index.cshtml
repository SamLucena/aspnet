@model WellBooks.Data.ApplicationDbContext

@{
    ViewData["Title"] = "Home Page";
}
<partial name="_Notification"/>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="row">
        @foreach(Product product in Model.Products)
        {
            <div class="card col-sm-6 col-md-4 col-xl-3 mb-3 me-3 bg-dark rounded">
                <img class="rounded card-img-top mt-3" src="@product.ImgUrl" alt="@product.Name"/>
                <div class="d-flex flex-column align-items-center p-3">
                    <h3 class="text-white fw-bold mb-3 card-title">@product.Name</h3>
                    <p class="text-secondary text-start">@product.Description</p>
                    <div>
                        <a class="btn btn-outline-primary me-3"><i class="bi bi-cart"></i> Comprar</a>
                        <a class="btn btn-outline-secondary"><i class="bi bi-info-circle-fill"></i> Detalhes</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
