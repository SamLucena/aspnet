@model WellBooks.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete" style="max-width:480px; margin: auto;">
    <div class="border mt-4 p-3 text-center">
        <div class="row pb-3">
            <h2 class="text-center text-danger">Deletar produto :(</h2>
        </div>
        <div class="form-floating text-dark">
            <input asp-for="Name" class="form-control" value="@Model.Name" disabled>
            <label asp-for="Name">Nome</label>
        </div>

        <div class="form-floating text-dark">
            <input asp-for="Price" class="form-control" type="number" value="@Model.Price" disabled>
            <label asp-for="Price">Preço R$</label>
        </div>

        <div class="form-floating text-dark">
            <textarea asp-for="Description" class="form-control" rows="4" maxlength="255" value="@Model.Description" disabled></textarea>
            <label asp-for="Description">Descrição</label>
        </div>

        <div class="form-floating text-dark">
            <input asp-for="ImgUrl" class="form-control" type="url" value="@Model.ImgUrl" disabled>
            <label asp-for="ImgUrl">Endereço da Imagem</label>
        </div>

        <div class="form-floating text-dark">
            <input asp-for="Category" class="form-control" type="url" value="@Model.Category.Name" disabled>
            <label asp-for="Category">Categoria</label>
        </div>

        <div class="mt-2">
            <button type="submit" class="btn btn-outline-danger">Deletar produto</button>
            <a asp-action="Index" asp-controller="Product" class="btn btn-info ms-2">Voltar</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
