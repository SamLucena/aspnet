@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}


<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-info">Produtos</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-square-fill"></i> Novo produto
        </a>
    </div>
</div>
<hr />
<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card bg-dark rounded">
                <div class="text-center mt-2">
                    <h1 class="h4 text-primary">@product.Name</h1>
                </div>
                <div class="text-start mt-1 p-2">
                    <p class="text-secondary">@product.Description</p>
                </div>
                <div class="text-center p-2" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info d-block mb-2">Editar</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger d-block">Deletar</a>
                </div>
            </div>
        </div>
    }
</div>


