@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}


<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-info">Produtos</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-square-fill"></i> Novo produto
        </a>
    </div>
</div>
<hr />
<div class="row">
    @foreach(var product in Model)
    {
         <div class="col-sm-6 col-md-4 col-xl-3">
            <div class="d-flex flex-column align-items-center p-3">
                <h3 class="text-white fw-bold mb-3 card-title">@product.Name</h3>
                <p class="text-secondary text-start">@product.Description</p>
                <div>
                    <a class="btn btn-outline-info me-3" asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id"><i class="bi bi-pen"></i> Editar</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id"><i class="bi bi-trash3"></i> Deletar</a>
                </div>
            </div>
         </div>
    }
</div>


