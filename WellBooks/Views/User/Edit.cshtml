@model WellBooks.ViewModel.SignUpViewModel

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="RegisterAsync" style="max-width:480px">
    <div class="mt-4 p-3 text-dark">
        <div class="row pb-3">
            <h2 class="text-info">Edite o usuário!</h2>
        </div>

        <div class="form-floating">
            <input type="text" class="form-control" placeholder="Nome completo" asp-for="Name" value="@Model.Name">
            <label asp-for="Name">Nome completo</label>
        </div>
        <span class="text-danger" asp-validation-for="Name"></span>

        <div class="form-floating mt-2">
            <input type="email" class="form-control" placeholder="nome@exemplo.com" asp-for="Email" value="@Model.Email">
            <label asp-for="Email">Email</label>
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>

        <div class="form-floating mt-2">
            <input type="password" class="form-control" placeholder="Senha" asp-for="Password" value="@Model.Password">
            <label asp-for="Password">Senha</label>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
        <div class="form-floating mt-2">
            <input type="password" class="form-control" placeholder="Confirme a senha" asp-for="PasswordConfirm">
            <label asp-for="PasswordConfirm">Confirme a senha</label>
        </div>
        <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
 
        <select class="form-control bg-dark text-white mt-2" asp-for="Role">
            @if(Model.Role == "customer")
            {
                <option selected value="customer">Cliente</option>
                <option value="employee">Funcionário</option>
            }
            else
            {
                <option selected value="employee">Funcionário</option>
                <option value="customer">Cliente</option>
            }
            
        </select>
        <span class="text-danger" asp-validation-for="Role"></span>

        <div class="mt-2">
            <button type="submit" class="btn btn-outline-info me-2" asp-route-id="@ViewBag.UserId" asp-action="Edit" asp-controller="User">Editar</button>
            <a class="btn btn-success" asp-action="Index" asp-controller="User">Voltar para lista</a>
        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

