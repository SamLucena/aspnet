
@{
    ViewData["Title"] = "Cart";
}


<div class="row">
    <div class="col-6">
        <h3 class="text-primary">Carrinho de compras</h3>
    </div>
    <div class="col-6 text-end">
        <p class="btn btn-sm btn-primary text-end">Total: R$ @ViewBag.total</p>
    </div>
</div>
<div class="row">
    @foreach (var item in ViewBag.cart)
    {
        <div class="card col-sm-6 col-md-4 col-xl-3 mb-3 me-3 bg-dark rounded">
            <div class="d-flex flex-column p-3">
                <h3 class="text-white fw-bold mb-3 card-title">@item.Product.Name</h3>
                <p class="text-secondary text-start">Quantidade: @item.Quantity</p>
                <div>
                    <a class="btn btn-danger" asp-controller="OrderDetails" asp-action="Remove" asp-route-id="@item.Product.Id">Remover</a>
                </div>
            </div>
        </div>
    }
</div>
<div class="bottom-0">
    <div class="row">
        <div class="col text-end">
            <a class="btn btn-outline-info me-2" asp-controller="Home" asp-action="index">Continue comprando</a>
            <a class="btn btn-outline-primary" asp-controller="OrderDetails" asp-action="Confirm">Finalizar</a>
        </div>
    </div>
</div>



